        "/api/v3/geofence/{jobId}": {
            "get": {
                "tags": [
                    "Scheduler"
                ],
                "summary": "Start scheduled job by id.",
                "operationId": "app\\api\\v3\\Geofence::get_index",
                "parameters": [
                    {
                        "name": "jobId",
                        "in": "path",
                        "description": "Job identifier",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operation status"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v3/grid": {
            "post": {
                "tags": [
                    "Grid"
                ],
                "summary": "Create a fishnet grid from an input polygon",
                "operationId": "app\\api\\v3\\Grid::post_index",
                "requestBody": {
                    "description": "Fishnet parameters",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "table": {
                                        "type": "string",
                                        "example": "new_grid"
                                    },
                                    "extent": {
                                        "type": "string",
                                        "example": "my_extent_polygon"
                                    },
                                    "size": {
                                        "type": "integer",
                                        "example": 10000
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Return true if fishnet grid was created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v3/oauth/token": {
            "post": {
                "tags": [
                    "OAuth"
                ],
                "summary": "Get token",
                "operationId": "app\\api\\v3\\Oauth::post_token",
                "requestBody": {
                    "description": "OAuth password grant parameters",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "grant_type": {
                                        "type": "string",
                                        "example": "password"
                                    },
                                    "username": {
                                        "type": "string",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "1234Luggage"
                                    },
                                    "database": {
                                        "type": "string",
                                        "example": "roads"
                                    },
                                    "client_id": {
                                        "type": "string",
                                        "example": "xxxxxxxxxx"
                                    },
                                    "client_secret": {
                                        "type": "string",
                                        "example": "xxxxxxxxxx"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Operation status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "example": "MTQ0NjJkZmQ5OTM2NDE1ZTZjNGZmZjI3"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 3600
                                        },
                                        "refresh_token": {
                                            "type": "string",
                                            "example": "IwOGYzYTlmM2YxOTQ5MGE3YmNmMDFkNTVk"
                                        },
                                        "scope": {
                                            "type": "string",
                                            "example": "sql"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v3/scheduler/{jobId}": {
            "get": {
                "tags": [
                    "Scheduler"
                ],
                "summary": "Start scheduled job by id.",
                "operationId": "app\\api\\v3\\Scheduler::get_index",
                "parameters": [
                    {
                        "name": "jobId",
                        "in": "path",
                        "description": "Job identifier",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operation status"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v3/sql": {
            "post": {
                "tags": [
                    "Sql"
                ],
                "summary": "Do SQL quyeries",
                "operationId": "app\\api\\v3\\Sql::post_index",
                "requestBody": {
                    "description": "Parameters",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "q": {
                                        "type": "string",
                                        "example": "SELECT 1 as id,ST_setsrid(ST_MakePoint(10,56),4326) as geom"
                                    },
                                    "srs": {
                                        "description": "",
                                        "type": "integer",
                                        "example": "25832"
                                    },
                                    "format": {
                                        "type": "string",
                                        "example": "csv"
                                    },
                                    "geoformat": {
                                        "type": "string",
                                        "example": "wkt"
                                    },
                                    "allstr": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "lifetime": {
                                        "type": "integer",
                                        "example": 0
                                    },
                                    "base64": {
                                        "type": "boolean",
                                        "example": false
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "If select then the result will be data on choosen format. If transaction the number of effected rows is returned.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v3/tileseeder": {
            "get": {
                "tags": [
                    "Tileseeder"
                ],
                "summary": "Get all running mapcache_seed processes started by user",
                "operationId": "app\\api\\v3\\Tileseeder::get_index",
                "responses": {
                    "200": {
                        "description": "Operation status"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Tileseeder"
                ],
                "summary": "Starts a mapcache_seed process",
                "operationId": "app\\api\\v3\\Tileseeder::post_index",
                "requestBody": {
                    "description": "mapcache_seed parameters",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "My seeder job"
                                    },
                                    "layer": {
                                        "type": "string",
                                        "example": "my_schema.my_table"
                                    },
                                    "start": {
                                        "type": "integer",
                                        "example": 10
                                    },
                                    "end": {
                                        "type": "integer",
                                        "example": 10
                                    },
                                    "extent": {
                                        "type": "string",
                                        "example": "my_schema.my_table_with_extent"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Return the UUID and process id",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "uuid": {
                                            "type": "string",
                                            "example": "C4A3797E-EC6B-4DAC-9474-ADA9083620F3"
                                        },
                                        "pid": {
                                            "type": "integer",
                                            "example": 20326
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v3/tileseeder/{uuid}": {
            "delete": {
                "tags": [
                    "Tileseeder"
                ],
                "summary": "Kills a mapcache_seed process by uuid. Use * to kill all processes started by user.",
                "operationId": "app\\api\\v3\\Tileseeder::delete_index",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "Uuid of Process",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operation status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "pid": {
                                            "type": "integer",
                                            "example": 20326
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v3/tileseeder/log/{uuid}": {
            "get": {
                "tags": [
                    "Tileseeder"
                ],
                "summary": "Get staus of a running job",
                "operationId": "app\\api\\v3\\Tileseeder::get_log",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "Job identifier",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operation status"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "bearerAuth",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}