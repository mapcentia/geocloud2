<form hx-post="/activation">
    <h1 class="h3 mb-3 fw-normal">Get an activation code</h1>
    <div class="form-floating mb-3">
        <input class="form-control" type="email" name="email" id="email" placeholder="E-mail" value="{{ email }}" required/>
        <label class="form-label" for="email">E-mail</label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Request activation code</button>
</form>